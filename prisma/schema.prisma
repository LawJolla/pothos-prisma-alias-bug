datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

generator pothos {
  provider = "prisma-pothos-types"

  clientOutput = "./client"
  output       = "./generated.d.ts"
  prismaUtils  = true
}

model Account {
  id     Int     @id @default(autoincrement())
  name   String
  values Value[]
}

model Value {
  id        Int      @id @default(autoincrement())
  value     String
  date      DateTime
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int
}
